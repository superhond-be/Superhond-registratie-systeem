{
  "name": "superhond-registratie-systeem",
  "version": "1.0.2",
  "description": "🐶 Superhond Registratie Systeem – Node.js Express server + Google Sheets proxy + frontend.",
  "type": "module",
  "engines": { "node": ">=18.18.0" },

  "scripts": {
    "start": "node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "dev": "nodemon --env-file .env server/index.js",

    "lint": "eslint .",
    "format": "prettier --write .",

    "health": "node tools/health-check.js",
    "verify": "node tools/verify.js",

    "bump": "node tools/bump-version.js",
    "bump:minor": "node tools/bump-version.js minor",
    "bump:major": "node tools/bump-version.js major"
  },

  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },

  "devDependencies": {
    "nodemon": "^3.1.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3"
  },

  "keywords": [
    "superhond",
    "registratie",
    "dogschool",
    "express",
    "node",
    "google-sheets",
    "api-proxy",
    "render",
    "apps-script"
  ],

  "author": {
    "name": "Paul Thijs",
    "email": "info@superhond.be"
  },
  "license": "MIT",
  "homepage": "https://superhond.be",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulthijs/superhond-registratie-systeem"
  }
}
