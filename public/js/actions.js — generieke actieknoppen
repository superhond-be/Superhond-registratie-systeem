/**
 * public/js/actions.js — helpers voor actiekolom (v0.27.2)
 */
export function actionBtns({id}) {
  const esc = (s)=>String(s||'').replace(/[&<>"']/g,c=>({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;'}[c]));
  return `
    <div class="sh-actions">
      <button class="btn btn-xs" data-act="view"   data-id="${esc(id)}" title="Bekijken">👁️</button>
      <button class="btn btn-xs" data-act="edit"   data-id="${esc(id)}" title="Wijzigen">✏️</button>
      <button class="btn btn-xs danger" data-act="delete" data-id="${esc(id)}" title="Verwijderen">🗑️</button>
    </div>`;
}
export function wireActionHandlers(tableSel, handlers){
  const root = document.querySelector(tableSel); if(!root) return;
  root.addEventListener('click', (e)=>{
    const b = e.target.closest('[data-act]'); if(!b) return;
    const id = b.dataset.id; const act = b.dataset.act;
    if (handlers[act]) handlers[act](id);
  });
}
